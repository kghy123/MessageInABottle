<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kghy1234gmail.messagesinabottle.SignUpActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signup_img_id"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/x"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/signup_et_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="ID를 입력해주세요"/>

            <Button
                android:id="@+id/signup_btn_checkid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"
                android:onClick="clickCheckId"
                android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signup_img_pw"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/x"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/signup_et_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="비밀번호를 입력해주세요"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signup_img_pw_confirm"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/x"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/signup_et_pw_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="비밀번호를 한번더 입력해주세요"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="돌아가기"
                android:onClick="clickBack"/>

            <Button
                android:id="@+id/signup_btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입하기"
                android:onClick="clickSignUp"
                android:enabled="false"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
